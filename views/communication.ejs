<<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/communication.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <title>Message Service</title>
  </head>
  <body>

    <div class="container">
   <div class="row">
     <div class="col-md-12 text-center">
       <h2>GradRec Message Center</h2>
       <div class="input-group col-6 mx-auto enter-name">
         <input type="text" id="name-input" class="form-control" placeholder="Enter Your Name">
         <span class="input-group-addon submit-name">Enter</span>
       </div>
     </div>
     <div class="col-md-12">
       <div class="chat-window">
         <div id="messages"></div>
       </div>
     </div>
     <div class="col-md-12">
       <div class="input-group enter-chat-message">
         <input type="text" id="chat-input" class="form-control" placeholder="Chat Message...">
         <span class="input-group-addon submit-chat-message">Send</span>
       </div>
     </div>
   </div>
   <div class="col-md-12 text-center">
     <small>
       Powered by <a href="https://www.mun.ca/">GradRec</a>
     </small>
   </div>
 </div>

