<div class="container">
    <div class="page-header">
        <h2>Student Registration Form :</h2>

    </div>
    <div class="row" id="mainRow">
        <div class="col-md-8 col-md-offset-1">
            <form class="form-horizontal" role="form">
                <fieldset>

                    <!-- Address Section -->
                    <!-- Form Name -->
                    <legend>Address Details :</legend>
                    <!-- Text input-->
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="text" id="address_line1" placeholder="Address Line 1" class="form-control">
                        </div>
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="text" id="address_line2" placeholder="Address Line 2" class="form-control">
                        </div>
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <div class="col-sm-4">
                            <input type="text" id="city" placeholder="City" class="form-control">
                        </div>
                        <div class="col-sm-2">
                            <input type="text" id="state" placeholder="State" class="form-control">
                        </div>
                        <div class="col-sm-4">
                            <input type="text" id="post_code" placeholder="Post Code" class="form-control">
                        </div>
                    </div>
