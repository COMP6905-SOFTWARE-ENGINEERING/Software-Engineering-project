                    <!-- Education Section -->
                    <legend>Education Details :</legend>
                    <div id="educationFieldsWrapper" >
                        <div class="educationFields">
                            <h4><STRONG>Education :</STRONG></h4>

                            <label for="level"><span>Level of Education</span></label>
                            <select id="select_education_level" class="form-control form-control-sm">
                                <option value="">Select an option...</option>
                                <option value="bachelors"  >Bachelors</option>
                                <option value="masters"  >Masters</option>
                                <option value="phd"  >Phd</option>
                            </select>
                            <span class="error"></span>

                            <label for="field"><span>Field of Study</span></label>
                            <select id="select_field_of_study" class="form-control form-control-sm">
                                <option value="">Select an option...</option>
                                <option value="ece"  >Electronics and Communications</option>
                                <option value="EEE"  >Electrical</option>
                                <option value="cse"  >Computer Science</option>
                                <option value="me"  >Mechanical</option>
                                <option value="ce"  >Chemical</option>
                                <option value="cv"  >Civil</option>
                            </select>
                            <span class="error"></span>

                            <div class="clear"></div>
                            <label for="name">Institution Name</label>
                            <input type="text" id="institution_name" class="form-control">
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="education()">Add Education</button>
                    <!-- Skills Section -->

                    <legend>Skills :</legend>
                    <div id="skillsFieldsWrapper" >
                        <div class="skillFields">
                            <div>
                                <label for="skill">Skill Name :</label>
                                <input type="text" class="form-control select_skill" id="skill">
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="skills()">Add Skills</button>
                    <!-- Research Section -->

                    <legend>Research Interest :</legend>
                    <div id="researchFieldsWrapper" >
                        <div class="researchFields">
                            <label for="research">Interest Name :</label>
                            <input type="text" id="research_interest" class="form-control">
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="research()">Add Interest</button>
                    <!-- Experience Section -->

                    <legend>Work Experience :</legend>
                    <div id="expFieldsWrapper" >
                        <div class="expFields">
                            <label for="comp">Company Name :</label>
                            <input type="text" class="form-control" id="company">
                            <label for="pos">Position :</label>
                            <input type="text" class="form-control" id="position">
                            <label for="startDate">Start Date :</label>
                            <input type="date" class="form-control" id="start_date">
                            <label for="endDate">End Date :</label>
                            <input type="date" class="form-control" id="end_date">
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="experience()">Add Experience</button>

                    <legend>Others :</legend>
                    <label for="projDate">Intended Start Date:</label>
                    <input type="date" class="form-control" id="intended_start_date">
                    <label for="fund">Require Financial Aid? :</label>
                    <input class="form-check-input" type="radio" name="require_financial_aid" id="gridRadios1" value="option1" checked>
                    <label class="form-check-label" for="gridRadios1">
                        Yes
                    </label>
                    <input class="form-check-input" type="radio" name="require_financial_aid" id="gridRadios2" value="option2">
                    <label class="form-check-label" for="gridRadios2">
                        No
                    </label>


                </fieldset>
            </form>
            <button type="submit" class="btn btn-primary" onclick="profileCreateSubmit()">Submit</button>
        </div>

    </div>
